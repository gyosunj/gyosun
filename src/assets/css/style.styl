/* == Variables == */
$theme-color-default = #199BC9
$theme-color-secondary = #1FAB9C
$theme-bg-color = #F5F4F2
$theme-font-color = #7B7B7B

$theme-font-size = 16px
$px = (1/$theme-font-size)rem

$default-tran-speed = .4s
$fast-tran-speed = $default-tran-speed * 0.5
$slow-tran-speed = $default-tran-speed * 1.5

$default-button-size = 4rem
$large-button-size = $default-button-size * 1.5
$small-button-size = $default-button-size * 0.5

$navAni-main-transX = 350 * $px
$navAni-main-transX-sm = 260 * $px
$navAni-nav-transX = -400 * $px

tranS(str)
  transition str
  -webkit-transition str
  -moz-transition str
  -o-transition str

transProp(str)
  transition-property str
  -webkit-transition-property str
  -moz-transition-property str
  -o-transition-property str

transDura(num)
  transition-duration num
  -webkit-transition-duration num
  -moz-transition-duration num
  -o-transition-duration num

transF(str)
  transform str
  -webkit-transform str
  -moz-transform str
  -ms-transform str
  -o-transform str
  
transfOrig(str)
  transform-origin str
  -webkit-transform-origin str
  -moz-transform-origin str
  -ms-transform-origin str
  -o-transform-origin str
  
backfaceV(str)
  backface-visibility str
  -webkit-backface-visibility str
  -moz-backface-visibility str

boxShadow(str)
  box-shadow str
  -webkit-box-shadow str
  -moz-box-shadow str

overfScrol(str)
  overflow-scrolling str
  -webkit-overflow-scrolling str



/* == Reset == */
html, body, body div, span, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, abbr, address, cite, code, del, dfn, em, img, ins, kbd, q, samp, small, strong, sub, sup, var, b, i, dl, dt, dd, ol, ul, li, fieldset, form, label, legend, table, caption, tbody, tfoot, thead, tr, th, td, article, aside, figure, footer, header, hgroup, menu, nav, section, time, mark, audio, video, details, summary 
    margin 0
    padding 0
    border 0
    font-size 100%
    vertical-align baseline
    background transparent
                                   
html 
  overflow-y scroll

article, aside, figure, footer, header, hgroup, nav, section, details, summary 
    display block
 
img, object, embed 
    max-width 100%
 
input, select 
    vertical-align middle
 
.clickable, label, input[type=button], input[type=submit], input[type=file], button 
    cursor pointer
      
button 
  outline none
      

/* == Global == */
html *
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

*, *after, *before
  box-sizing border-box
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  
html, body
  /* you need to set this to assign to the main element a min height of 100% */
  height 100%
  font-family: 'Lato', 'helvetica', sans-serif;
  font-size: $theme-font-size
  color: $theme-font-color
  background-color: $theme-bg-color

a
  color: $theme-color-default
  &:link
    color: $theme-color-default
  &:hover
    color: $theme-color-default
  &:visited
    color: $theme-color-default
  &:active
    color: $theme-color-default
  
h1
  font-size 42 * $px
  font-weight 300

h2
  font-size 36 * $px
  font-weight 700
  
h3
  font-size 30 * $px
  font-weight 700
  
h4
  font-size 24 * $px
  font-weight 700
  
h5
  font-size 16 * $px
  font-weight 700
  
h6
  font-size 14 * $px
  font-weight 700

svg 
  path
    stroke $theme-color-default
    stroke-width 2 * $px
    fill transparent
  line
    stroke $theme-color-default
    stroke-width 2 * $px
  polyline
    stroke $theme-color-default
    stroke-width 2 * $px
    

/* == Sidebar Nav Animation == */
.application 
  overflow-x hidden

navAni-nav-innerShadow()
  boxShadow(inset -10 * $px 0 * $px 50 * $px -12 * $px rgba(64, 64, 64,1))

.rendered-body
  min-height 100%
  position relative
  z-index 2

.show-nav-btn
  top 0
  left 0
  position fixed
  z-index 9999

.rendered-body, .show-nav-btn
  background-color $theme-bg-color
  transF(translateX(0))
  transProp(transform)
  transDura($default-tran-speed)

.show-nav .rendered-body, .show-nav .show-nav-btn
  transF(translateX($navAni-main-transX))
  transProp(transform)
  transDura($default-tran-speed)

.rendered-nav
  position fixed
  height 100%
  left 0
  top 0
  visibility hidden
  z-index 1
  width $navAni-main-transX
  background-color $theme-color-secondary
  overflow-y auto  
  transF(translateX(0))
  backfaceV(hidden)  
  tranS(transform $default-tran-speed 0s, visibility 0s $default-tran-speed)
  transF(translateX($navAni-nav-transX))
  navAni-nav-innerShadow()

.show-nav .rendered-nav
  transF(translateX(0))
  visibility visible
  tranS(transform $default-tran-speed 0s, visibility 0s 0s)
  overfScrol(touch)
  
@media (max-width: 768px)
  .show-nav .rendered-body, .show-nav .show-nav-btn
    transF(translateX($navAni-main-transX-sm))

  .rendered-nav
    width $navAni-main-transX-sm


/* == button == */
.lines-button 
  display inline-block
  padding ($default-button-size/2) ($default-button-size/2)
  tranS($default-tran-speed)
  cursor pointer
  background $theme-bg-color
  border none
  &:hover
    opacity 1
  &:active
    tranS(0)

line(a, b)
  display inline-block
  width ($default-button-size/a)
  height ($default-button-size/b)
  background $theme-color-default
  border-radius ($default-button-size/14) 
  tranS($default-tran-speed)
  
.lines 
  line(1, 14)
  position relative 
  &:before, &:after 
    line(1, 14)
    position absolute
    left:0
    content ''
    transfOrig(($default-button-size/14) center)
  &:before 
    top ($default-button-size/4)
  &:after  
    top -($default-button-size/4)

.lines-button.to-x .lines
  tranS(background .3s .6s ease)
  &:before, &:after
    transfOrig(50% 50%)
    tranS(top .3s .6s ease, transform .3s ease)
    
.lines-button.to-x.action .lines
    tranS(background .3s 0s ease)  
    background transparent
    &:before, &:after
      transition top .3s ease, transform .3s .5s ease   
      top 0
      width $default-button-size
    &:before
      transF(rotate3d(0,0,1,45deg))  
    &:after
      transF(rotate3d(0,0,1,-45deg))

@media (max-width: 768px)
  .lines-button 
    padding ($default-button-size/4) ($default-button-size/4)
  
  .lines 
    line(2, 20)
    &:before, &:after 
      line(2, 20)
    &:before 
      top ($default-button-size/8)
    &:after  
      top -($default-button-size/8)
  
  .lines-button.to-x.action .lines
    &:before, &:after
      width inherit

/* == Nav == */
.nav-items
  margin 1 * $px
  margin-top 20 * $px
  .nav-item 
    padding 10 * $px
    color darken($theme-bg-color, 10%)
    display inline-block
    width 100%
    font-size 18 * $px
    &:hover
      color lighten($theme-bg-color, 10%)
      text-decoration none
      font-weight 700
    &:active
      text-decoration none

