/* == Sidebar Nav Animation == */
.application 
  overflow-x hidden

navAni-nav-innerShadow()
  boxShadow(inset -10 * $px 0 * $px 50 * $px -12 * $px rgba(64, 64, 64,1))

.rendered-body
  min-height 100%
  position relative
  z-index 2

.show-nav-btn
  top 0
  left 0
  position fixed
  z-index 9999

.rendered-body, .show-nav-btn
  background-color $theme-bg-color
  left 0px
  tranS(left $default-tran-speed)

.collapse .rendered-body, .collapse .show-nav-btn
  left $navAni-main-transX
  tranS(left $default-tran-speed)

.rendered-nav
  position fixed
  height 100%
  left 0
  top 0
  z-index 1
  width $navAni-main-transX
  background-color darken($theme-color-secondary, 20%)
  navAni-nav-innerShadow()
  overflow-y auto  
  transF(translateX($navAni-main-transX * -1))
  tranS(transform $default-tran-speed 0s)
  
.collapse .rendered-nav
  overfScrol(touch)
  transF(translateX(0))
  tranS(transform $default-tran-speed 0s)

@media (max-width: 768px)
  //use translateX
  .collapse .rendered-body, .collapse .show-nav-btn
    left $navAni-main-transX-sm

  .rendered-nav
    width $navAni-main-transX-sm
    transF(translateX($navAni-main-transX-sm * -1))


/* == button == */
.btn
  border 3px solid $theme-font-color
  font-size inherit
  color $theme-font-color
  background none
  cursor pointer
  padding 1rem 4rem
  display inline-block
  text-transform uppercase
  letter-spacing 0.1rem
  font-weight 700
  outline none
  position relative
  -webkit-transition all 0.3s
  -moz-transition all 0.3s
  transition all 0.3s
  &:hover
    color #fff
    background #777777

.btn-small
  padding 0.5rem 2rem

.btn-primary
  color $theme-color-primary
  border 3px solid $theme-color-primary
  &:hover
    color #fff
    background $theme-color-primary
    
.btn-secondary
  color $theme-color-secondary
  border 3px solid $theme-color-secondary
  &:hover
    color #fff
    background $theme-color-secondary

.btn-tertiary
  color $theme-color-tertiary
  border 3px solid $theme-color-tertiary
  &:hover
    color #fff
    background $theme-color-tertiary

.btn-ok
  color $theme-color-ok
  border 3px solid $theme-color-ok
  &:hover
    color #fff
    background $theme-color-ok
    
.btn-notok
  color $theme-color-notok
  border 3px solid $theme-color-notok
  &:hover
    color #fff
    background $theme-color-notok
    
.btn-disable
  pointer-events none !important
  cursor default !important
  color #777777 !important 
  a
    color #777777 

.lines-button 
  display inline-block
  padding ($default-button-size/3) ($default-button-size/3) ($default-button-size/2) ($default-button-size/3)
  tranS($default-tran-speed)
  cursor pointer
  background $theme-bg-color
  border none
  &:hover
    opacity 1
  &:active
    tranS(0)

line(a, b)
  display inline-block
  width ($default-button-size/a)
  height ($default-button-size/b)
  background $theme-color-primary
  border-radius ($default-button-size/14) 
  tranS($default-tran-speed)
  
.lines 
  line(1, 14)
  position relative 
  &:before, &:after 
    line(1, 14)
    position absolute
    left:0
    content ''
    transfOrig(($default-button-size/14) center)
  &:before 
    top ($default-button-size/4)
  &:after  
    top -($default-button-size/4)

.lines-button.to-x .lines
  tranS(background .3s .6s ease)
  &:before, &:after
    transfOrig(50% 50%)
    tranS(top .3s .6s ease, transform .3s ease)
    
.collapse .lines-button.to-x .lines
    tranS(background .3s 0s ease)  
    background transparent
    &:before, &:after
      transition top .3s ease, transform .3s .5s ease   
      top 0
      width $default-button-size
    &:before
      transF(rotate3d(0,0,1,45deg))  
    &:after
      transF(rotate3d(0,0,1,-45deg))

@media (max-width: 768px)
  .lines-button 
    padding ($default-button-size/10) ($default-button-size/6) ($default-button-size/4) ($default-button-size/6)
  
  .lines 
    line(2, 20)
    &:before, &:after 
      line(2, 20)
    &:before 
      top ($default-button-size/8)
    &:after  
      top -($default-button-size/8)
  
  .collapse .lines-button.to-x .lines
    &:before, &:after
      width inherit

