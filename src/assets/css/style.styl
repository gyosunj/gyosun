/* == Reset == */
html, body, body div, span, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, abbr, address, cite, code, del, dfn, em, img, ins, kbd, q, samp, small, strong, sub, sup, var, b, i, dl, dt, dd, ol, ul, li, fieldset, form, label, legend, table, caption, tbody, tfoot, thead, tr, th, td, article, aside, figure, footer, header, hgroup, menu, nav, section, time, mark, audio, video, details, summary 
    margin 0
    padding 0
    border 0
    font-size 100%
    vertical-align baseline
    background transparent
                                   
html 
  overflow-y scroll

article, aside, figure, footer, header, hgroup, nav, section, details, summary 
    display block
 
img, object, embed 
    max-width 100%
 
input, select 
    vertical-align middle
 
.clickable, label, input[type=button], input[type=submit], input[type=file], button 
    cursor pointer
      
button 
  outline none


/* == Prefixer Mixins == */
tranS(str)
  transition str
  -webkit-transition str
  -moz-transition str
  -o-transition str

transProp(str)
  transition-property str
  -webkit-transition-property str
  -moz-transition-property str
  -o-transition-property str

transDura(num)
  transition-duration num
  -webkit-transition-duration num
  -moz-transition-duration num
  -o-transition-duration num

transF(str)
  transform str
  -webkit-transform str
  -moz-transform str
  -ms-transform str
  -o-transform str
  
transfOrig(str)
  transform-origin str
  -webkit-transform-origin str
  -moz-transform-origin str
  -ms-transform-origin str
  -o-transform-origin str
  
backfaceV(str)
  backface-visibility str
  -webkit-backface-visibility str
  -moz-backface-visibility str

boxShadow(str)
  box-shadow str
  -webkit-box-shadow str
  -moz-box-shadow str

overfScrol(str)
  overflow-scrolling str
  -webkit-overflow-scrolling str
  

/* == Variables == */
$theme-font-color = #7B7B7B
$theme-font-size = 16px
$theme-font-family-sans = "Lato", "Helvetica Neue", Helvetica, sans-serif;
$theme-font-family-serif = "Merriweather", Georgia, Times, "Times New Roman", serif;
$theme-line-height = 1.6em
$theme-color-primary = #199BC9
$theme-color-secondary = #1FAB9C
$theme-bg-color = #F5F4F2

$px = (1/$theme-font-size)rem

$default-tran-speed = .4s
$fast-tran-speed = $default-tran-speed * 0.5
$slow-tran-speed = $default-tran-speed * 1.5

$default-button-size = 3rem
$large-button-size = $default-button-size * 1.5
$small-button-size = $default-button-size * 0.5

$navAni-main-transX = 350 * $px
$navAni-main-transX-sm = 260 * $px
$navAni-nav-transX = -350 * $px

$default-margin = 100 * $px
$default-margin-half = $default-margin * 0.5


/* == Global == */
html *
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

*, *after, *before
  box-sizing border-box
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  
html, body
  height 100%
  font-family $theme-font-family-sans
  font-size $theme-font-size
  color $theme-font-color
  background-color $theme-bg-color
  
p
  line-height $theme-line-height
  
a
  color: $theme-color-primary
  &:link,
  &:hover,
  &:visited,
  &:active
    color: $theme-color-primary
  
h1, h2, h3, h4, h5, h6
  line-height $theme-line-height * 0.7

h1
  font-size 42 * $px
  font-weight 300

h2
  font-size 36 * $px
  font-weight 700
  
h3
  font-size 30 * $px
  font-weight 700
  
h4
  font-size 24 * $px
  font-weight 700
  
h5
  font-size 16 * $px
  font-weight 700
  
h6
  font-size 14 * $px
  font-weight 700

svg 
  path
    stroke $theme-color-primary
    stroke-width 2 * $px
    fill transparent
  line
    stroke $theme-color-primary
    stroke-width 2 * $px
  polyline
    stroke $theme-color-primary
    stroke-width 2 * $px
    
.visible-xs-block
  display none !important

.full-screen
  height 100vh
  
.cover-bg
  background-repeat no-repeat
  background-position center center
  background-size cover

@media (max-width: 768px)   
  .hidden-xs
    display none !important
    
  .visible-xs-block 
    display block !important
    

/* == Sidebar Nav Animation == */
.application 
  overflow-x hidden

navAni-nav-innerShadow()
  boxShadow(inset -10 * $px 0 * $px 50 * $px -12 * $px rgba(64, 64, 64,1))

.rendered-body
  min-height 100%
  position relative
  z-index 2

.show-nav-btn
  top 0
  left 0
  position fixed
  z-index 9999

.rendered-body, .show-nav-btn
  background-color $theme-bg-color
  left 0px
  tranS(left $default-tran-speed)

.collapse .rendered-body, .collapse .show-nav-btn
  left $navAni-main-transX
  tranS(left $default-tran-speed)

.rendered-nav
  position fixed
  height 100%
  left 0
  top 0
  z-index 1
  width $navAni-main-transX
  background-color $theme-color-secondary
  navAni-nav-innerShadow()
  overflow-y auto  
  transF(translateX($navAni-main-transX * -1))
  tranS(transform $default-tran-speed 0s)
  
.collapse .rendered-nav
  overfScrol(touch)
  transF(translateX(0))
  tranS(transform $default-tran-speed 0s)

@media (max-width: 768px)
  //use translateX
  .collapse .rendered-body, .collapse .show-nav-btn
    left $navAni-main-transX-sm

  .rendered-nav
    width $navAni-main-transX-sm
    transF(translateX($navAni-main-transX-sm * -1))


/* == button == */
.lines-button 
  display inline-block
  padding ($default-button-size/3) ($default-button-size/3) ($default-button-size/2) ($default-button-size/3)
  tranS($default-tran-speed)
  cursor pointer
  background $theme-bg-color
  border none
  &:hover
    opacity 1
  &:active
    tranS(0)

line(a, b)
  display inline-block
  width ($default-button-size/a)
  height ($default-button-size/b)
  background $theme-color-primary
  border-radius ($default-button-size/14) 
  tranS($default-tran-speed)
  
.lines 
  line(1, 14)
  position relative 
  &:before, &:after 
    line(1, 14)
    position absolute
    left:0
    content ''
    transfOrig(($default-button-size/14) center)
  &:before 
    top ($default-button-size/4)
  &:after  
    top -($default-button-size/4)

.lines-button.to-x .lines
  tranS(background .3s .6s ease)
  &:before, &:after
    transfOrig(50% 50%)
    tranS(top .3s .6s ease, transform .3s ease)
    
.collapse .lines-button.to-x .lines
    tranS(background .3s 0s ease)  
    background transparent
    &:before, &:after
      transition top .3s ease, transform .3s .5s ease   
      top 0
      width $default-button-size
    &:before
      transF(rotate3d(0,0,1,45deg))  
    &:after
      transF(rotate3d(0,0,1,-45deg))

@media (max-width: 768px)
  .lines-button 
    padding ($default-button-size/10) ($default-button-size/6) ($default-button-size/4) ($default-button-size/6)
  
  .lines 
    line(2, 20)
    &:before, &:after 
      line(2, 20)
    &:before 
      top ($default-button-size/8)
    &:after  
      top -($default-button-size/8)
  
  .collapse .lines-button.to-x .lines
    &:before, &:after
      width inherit

